<p style="color: green"><%= notice %></p>

<%= render @photo %>

<p><%= @name %></p>
<%= @response %>
<%= cl_image_tag @photo.photo.key, height: 300, width: 400, crop: :fill %>



<div>
  <% if policy(@photo).edit? %>
    <%= link_to "Edit this photo", edit_api_v1_photo_path(@photo) %> |
  <% end %>
  <%= link_to "Back to photos", api_v1_photos_path %>

  <%= button_to "Destroy this photo", api_v1_photo_path(@photo), method: :delete if policy(@photo).destroy? %>
</div>
