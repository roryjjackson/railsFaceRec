<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dfipoufmj/image/upload/v1682017155/pexels-shelagh-murphy-1666816_xqohrz.jpg);">
  <div class="container">
    <button class="button">
      <%= link_to "New photo", new_api_v1_photo_path if policy(Photo).new? %>
    </button>
    <div id="photos">
      <% @photos.each do |photo| %>
        <div class="photo">
          <%= cl_image_tag photo.photo.key, height: 300, width: 400, crop: :fill, class: "index-img" %>
          <button class="button">
            <%= link_to "Details", api_v1_photo_path(photo) %>
          </button>
          <button style="display: none">
            <%= button_to "Delete", api_v1_photo_path(photo), method: :delete, class: "button", data: { confirm: "Are you sure you want to delete this photo?" } if policy(photo).destroy? %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
